{
  "name": "epic-helper",
  "version": "1.0.0",
  "description": "An unofficial Discord EPIC RPG helper bot",
  "main": "dist/index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "nodemon --exec ts-node --files apps/bot/src/bot.ts",
    "clean:node_modules": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "clean:build": "find . -name \"dist\" -type d -prune -exec rm -rf '{}' +",
    "build": "tsc",
    "start:built": "tsc && node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pwkang/epic-helper.git"
  },
  "author": "whigon",
  "bugs": {
    "url": "https://github.com/pwkang/epic-helper/issues"
  },
  "homepage": "https://github.com/pwkang/epic-helper#readme",
  "devDependencies": {
    "@types/ms": "^0.7.31",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.7",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
